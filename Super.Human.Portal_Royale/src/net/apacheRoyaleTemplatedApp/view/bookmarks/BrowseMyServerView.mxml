<?xml version="1.0" encoding="utf-8"?>
<j:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:j="library://ns.apache.org/royale/jewel"
		 xmlns:js="library://ns.apache.org/royale/basic" xmlns:breadcrump="classes.breadcrump.*" xmlns:topMenu="classes.topMenu.*" xmlns:html="library://ns.apache.org/royale/html" xmlns:controls="view.controls.*"
		 implements="interfaces.IBrowseMyServerView" gap="1">
	<j:beads>
		<js:ContainerDataBinding />
	</j:beads>

	<fx:Script>
		<![CDATA[
			import classes.breadcrump.Breadcrump;
			import classes.topMenu.TopMenu;

			import model.vo.ServerVO;

			import org.apache.royale.events.IEventDispatcher;

			private var _selectedItem:ServerVO;

			[Bindable]
			public function get selectedItem():ServerVO
			{
				return _selectedItem;
			}

			public function set selectedItem(value:ServerVO):void
			{
				_selectedItem = value;
			}
			
			public function get breadcrump():Breadcrump
			{
				return this.browserBreadcrump;
			}
			
			public function get topMenu():TopMenu
			{
				return this.browserTopMenu;
			}
			
			public function get addBookmark():IEventDispatcher
			{
				return this.bookmarkAdd;	
			}
			
			public function get openClient():Object
			{
				return this.clientOpen;
			}
			
			public function get openNomadWeb():Object
			{
				return this.nomadWebOpen;
			}
			
			public function get copyToClipboardServer():IEventDispatcher
			{
				return this.serverCopyToClpboard;
			}
			
			public function get copyToClipboardDatabase():IEventDispatcher
			{
				return this.databaseCopyToClipboard;
			}
			
			public function get copyToClipboardReplica():IEventDispatcher
			{
				return this.replicaCopyToClipboard;
			}
			
			public function resetView():void
			{
				
			}
		]]>
	</fx:Script>
	<breadcrump:Breadcrump localId="browserBreadcrump"/>
	<j:HGroup percentWidth="100" percentHeight="100" gap="1">
		<topMenu:TopMenu localId="browserTopMenu">
			<topMenu:style>
				<js:SimpleCSSStyles marginLeft="-10"/>
			</topMenu:style>
		</topMenu:TopMenu>
		<j:VGroup localId="contentBrowseMyServer" percentWidth="100" 
				  itemsHorizontalAlign="itemsCenter">
			<j:Card>
				<j:style>
					<js:AllCSSStyles width="inherit"/>
				</j:style>
				<j:CardHeader>
					<html:H4 text="{selectedItem.databaseName}" percentWidth="100"/>
				</j:CardHeader>
				<j:CardPrimaryContent>
					<j:Form>
						<controls:CustomFormItem className="horizontalContentCenterExpandFormItem"
												labelClass="formItemAppDetailsLabel"
												label="Title:">							
							<j:Label text="{selectedItem.name}" />
						</controls:CustomFormItem>
						<controls:CustomFormItem className="horizontalContentCenterExpandFormItem"
												labelClass="formItemAppDetailsLabel"
												label="Server:">							
							<j:Label text="{selectedItem.server}" />
							<j:HGroup itemsHorizontalAlign="itemsRight">
								<j:Button localId="serverCopyToClpboard" text="Copy to Clipboard" width="135">
									<j:beads>
										<j:Disabled disabled="{!selectedItem.server}"/>
									</j:beads>
								</j:Button>
							</j:HGroup>
						</controls:CustomFormItem>
						<controls:CustomFormItem className="horizontalContentCenterExpandFormItem"
												labelClass="formItemAppDetailsLabel"
												label="Database:">							
							<j:Label text="{selectedItem.database}" />
							<j:HGroup itemsHorizontalAlign="itemsRight">
								<j:Button localId="databaseCopyToClipboard" text="Copy to Clipboard" width="135">
									<j:beads>
										<j:Disabled disabled="{!selectedItem.database}"/>
									</j:beads>
								</j:Button>
							</j:HGroup>
						</controls:CustomFormItem>
						<controls:CustomFormItem className="horizontalContentCenterExpandFormItem"
												labelClass="formItemAppDetailsLabel"
												label="View:">							
							<j:Label text="{selectedItem.view}" />
						</controls:CustomFormItem>
						<controls:CustomFormItem className="horizontalContentCenterExpandFormItem"
												labelClass="formItemAppDetailsLabel"
												label="ReplicaID:">							
							<j:Label text="{selectedItem.replicaID}" />
							<j:HGroup itemsHorizontalAlign="itemsRight">
								<j:Button localId="replicaCopyToClipboard" text="Copy to Clipboard" width="135">
									<j:beads>
										<j:Disabled disabled="{!selectedItem.replicaID}"/>
									</j:beads>
								</j:Button>
							</j:HGroup>
						</controls:CustomFormItem>
					</j:Form>
				</j:CardPrimaryContent>
				<j:CardActions itemsHorizontalAlign="itemsRight" itemsVerticalAlign="itemsCenter">
					<j:VGroup percentWidth="100" visible="{selectedItem.hasBookmarks}" 
							  itemsHorizontalAlign="itemsLeft" itemsVerticalAlign="itemsCenter">
						<j:VGroup itemsHorizontalAlign="itemsCenter" itemsVerticalAlign="itemsCenter" gap="1">
							<j:IconButton>
								<j:icon>
									<js:MaterialIcon text="{MaterialIconType.CHECK}"/>
								</j:icon>
							</j:IconButton>
							<j:Label text="Bookmarked!"/>
						</j:VGroup>
					</j:VGroup>
					<j:Button localId="bookmarkAdd" text="Add Bookmark" className="noLinkStyle" minWidth="120"/>
					<j:Button localId="clientOpen" text="Open in Client" className="noLinkStyle"/>
					<j:Button localId="nomadWebOpen" text="Open in Nomad" className="noLinkStyle"/>
				</j:CardActions>
			</j:Card>
		</j:VGroup>
	</j:HGroup>
</j:VGroup>